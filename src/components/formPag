import React from 'react';

const FormPag = () => {
    // Funciones para manejar los clics de cada opción de pago
    const handleBBVAClick = () => {
        alert("Redirigiendo a BBVA...");
        // Lógica para BBVA
    };

    const handleMercadoPagoClick = () => {
        alert("Redirigiendo a Mercado Pago...");
        // Lógica para Mercado Pago
    };

    const handleOXXOClick = () => {
        alert("Generando ficha de pago para OXXO...");
        // Lógica para generar ficha OXXO
    };

    return (
        <div className="flex flex-col items-center mt-10">
            <h1 className="text-2xl font-bold mb-5">Selecciona tu Forma de Pago</h1>
            <div className="flex flex-col gap-4">
                {/* Botón BBVA */}
                <button
                    onClick={handleBBVAClick}
                    className="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded-lg w-64"
                >
                    Pagar con BBVA
                </button>

                {/* Botón Mercado Pago */}
                <button
                    onClick={handleMercadoPagoClick}
                    className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg w-64"
                >
                    Pagar con Mercado Pago
                </button>

                {/* Botón Fichas de Pago para OXXO */}
                <button
                    onClick={handleOXXOClick}
                    className="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded-lg w-64"
                >
                    Generar ficha para OXXO
                </button>
            </div>
        </div>
    );
};

